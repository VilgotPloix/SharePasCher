<div class="LogInBg">
  <div id="loginpage">
    <p class="title has-text-white">Se connecter</p>
    <br>
    <%= form_for resource, url: user_session_path, html: { class: "box formulaire" } do |f| %>
      <%= devise_error_messages! %>
      

      <div class="form-group">
        <%= f.label :email, class:"label" %>
        <%= f.email_field :email, class:"input", autocomplete:"title", placeholder:"Ton email" %>
      </div>
        </br>
      <div class="form-group">
        <%= f.label :password, "Mot de passe", class:"label" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class:"input", autocomplete:"title", placeholder:"********" %>
      </div>
        </br>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi", class:"content is-small" %>
        </div>
      <% end %>

      <div class="actions btnSession">
        <%= f.submit "Se connecter", class:"sub" %>
      </div>
    <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>




