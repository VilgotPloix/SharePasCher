<% @event.each do |event| %>
  <div class="card" id="cards">
      <div class="card-image">
        <figure class="image is-4by3">
          <%if event.photo.attached?%>
            <a href="/events/<%= event.id %>"><%= image_tag event.photo, alt: 'photo' %></a>
          <%else%>
            <a href="/events/<%= event.id %>"><%= image_tag "default_image.jpg" %></a>
          <%end%>
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
        </div>
        <div class="media-content">
          <p class="title is-4 titleEvents"><%= event.title %></p>
          <p class="subtitle is-6">par <%= event.host.first_name %></p>
        </div>
      </div>

      <div class="content">
        <%= event.description %>
        <br>
      
      </div>
      </div>
      </div>
  
<%end%>